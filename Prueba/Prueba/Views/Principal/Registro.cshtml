
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registro</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link href="~/Content/css/Login.css" rel="stylesheet" />
</head>
<body>
    <div class="sidenav">
        <div class="login-main-text">
            <h2>
                Bienvenido<br>
                al Registro
            </h2>
            <p>Ingrese usuario y contraseña para registrarse</p>
        </div>
    </div>
    <div class="main">
        <div class="col-md-6 col-sm-12">
            <div class="login-form">
                <form action="@Url.Action("Registro","Principal")" method="post">
                    <div class="form-group">
                        <label>Usuario</label>
                        <input name="usuario" type="text" class="form-control" placeholder="Usuario">
                    </div>
                    <div class="form-group">
                        <label>Contraseña</label>
                        <input name="pass" type="password" class="form-control" placeholder="Contraseña">
                    </div>
                    @if (ViewData["Mensaje"] != null)
                    {
                        <div class="alert alert-warning" role="alert">
                            @ViewData["Mensaje"]
                        </div>
                    }
                    <button type="submit" class="btn btn-black">Registrarse</button>
                    <a class="btn btn-secondary" href="@Url.Action("Login","Principal")">Regresar a Login</a>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
